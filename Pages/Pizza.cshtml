@page
@model PizzaShop.Pages.PizzaModel
@{
}

<div class="text-center">
	<div class="welcomeText text-capitalize text-black">
		<h1>Our delicious Pizza</h1>
		<h4>Choose pizza or try to build your own with our pizza builder</h4>
		
	</div>

	<div class="container">
		<div class="row">
			<div class="col-12 mb-5 mt-5">
				<div class="w-100 row makeYourOwnDiv">
					<div class="col-4">
						<img src="~/images/Pizzas/Create.png" class="w-100" />
					</div>
					<div class="col-8 align-items-center">
						<div class="align-middle makeYourOwnText">
							<h3 style="text-align:left"></h3>
							<p style="text-align:left">Make your own pizza!</p>
							<a class="btn btn-primary" style="float:left" asp-area="" asp-page="Forms/CustomPizza">Try now!</a>
						</div>
					</div>
				</div>
			</div>

			@foreach (var pizza in Model.fakePizzaDataBase)
				{
					var imagePath = "~/images/Pizzas/" + pizza.ImageTitle + ".png"; 
					<div class="col-4 mb-5">
						<img src="@imagePath" class="w-100" asp-append-version="true" />
						<a class="btn btn-primary mt-1" asp-area="" asp-page="Checkout/Checkout">Get this Pizza!</a>
						<br />
					</div>
				}
		</div>
	</div>

	<p class="smallText"><i>Max 2 pizza's per order</i></p>
</div>